@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row" style="margin-top: 3vh">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control rounded-border" disabled />
            </div>

            <div class="form-group">
                <p> First Name </p>
                <input asp-for="Input.@Model.FirstName" class="form-control rounded-border" />
                <span asp-validation-for="Input.@Model.FirstName"></span>
            </div>

            <div class="form-group">
                <p> Last Name </p>
                <input asp-for="Input.@Model.LastName" class="form-control rounded-border" />
                <span asp-validation-for="Input.@Model.LastName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.@Model.Address"></label>
                <input asp-for="Input.@Model.Address" class="form-control rounded-border" />
                <span asp-validation-for="Input.@Model.Address"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.@Model.Postcode"></label>
                <input asp-for="Input.@Model.Postcode" class="form-control rounded-border" />
                <span asp-validation-for="Input.@Model.Postcode"></span>
            </div>

            <div class="form-group">
                <p> Phone Number </p>
                <input asp-for="Input.@Model.PhoneNumber" class="form-control rounded-border" />
                <span asp-validation-for="Input.@Model.PhoneNumber"></span>
            </div>

            <div class="form-group">
                <label class="control-label">About Me</label>
                <textarea asp-for="Input.@Model.AboutMe" class="form-control rounded-border" cols="50" rows="6"></textarea>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}